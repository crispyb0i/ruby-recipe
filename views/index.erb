<h1>Here are all our recipes</h1>

<div class="col-sm-2">
  <%if @ingredients%>
    <h3>Ingredients</h3>
    <% @ingredients.each() do |ingredient|%>
      <a href="/ingredient/<%= ingredient.id %>"><%= ingredient.name() %></a> <br>
    <% end %>
  <% end %>
  <br>
  <h4>Add an ingredient</h4>
  <form action="/ingredient" method="post">
    <div class="form_group">
      <input type="text" name="name">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Make a new ingredient</button>
  </form>
</div>
<div class="col-sm-8">
  <%if @recipes%>
    <h3>Recipe</h3>
    <% @recipes.each() do |recipe|%>
      <a href="/recipe/<%= recipe.id %>"><%= recipe.name() %></a> <br>
    <% end %>
  <% end %>
  <br>
  <h4>Add a recipe</h4>
  <form action="/recipe" method="post">
    <div class="form_group">
      <input type="text" name="name">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Make a new Recipe</button>
  </form>
</div>
<div class="col-sm-2">
  <%if @tags%>
    <h3>Categories</h3>
    <% @tags.each() do |tag|%>
      <a href="/tag/<%= tag.id %>"><%= tag.name() %></a> <br>
    <% end %>
  <% end %>
  <br>
  <h4>Add a category</h4>
  <form action="/tag" method="post">
    <div class="form_group">
      <input type="text" name="name">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Make a new category</button>
  </form>
</div>
